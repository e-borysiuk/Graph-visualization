<Window x:Class="Labirynth.CreateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labirynth"
        mc:Ignorable="d"
        Title="CreateWindow" SizeToContent="WidthAndHeight" Background="BlanchedAlmond">
    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal">
            <Label Margin="5">X: </Label>
            <TextBox Name="TbX" Margin="5" MinWidth="30"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Margin="5">Y: </Label>
            <TextBox x:Name="TbY" Margin="5" MinWidth="30"/>
        </StackPanel>
        <Button Margin="10" Click="ButtonBase_OnClick">Stwórz</Button>
    </StackPanel>
</Window>
